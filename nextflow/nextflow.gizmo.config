profiles {
    apptainer {
	apptainer.enabled = true
	apptainer.autoMounts = true
	runOptions = '--no-home --containall'
    }
}

env {
    TMPDIR="$TMPDIR"
    APPTAINER_TMPDIR="$APPTAINER_TMPDIR"
}

